---
const { title, subheader, imgSrc } = Astro.props;
---

<header
  class={`overflow-hidden relative flex justify-center flex-col py-20 items-center bg-no-repeat bg-cover ${imgSrc}`}
>
  <div class="z-40 text-center">
    <h2 data-testid="header-h2" class="text-6xl text-neutral-200">{title}</h2>
    <p data-testid="header-subheader" class="text-4xl my-6 text-neutral-200">
      {subheader}
    </p>
  </div>
  <div
    class="h-full w-full absolute top-0 left-0 bg-[url('/assets/texture.png')]"
  >
  </div>
  <div class="h-full w-full absolute top-0 left-0 bg-black opacity-50"></div>
</header>
