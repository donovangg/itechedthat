---
import PageLayout from "../layouts/PageLayout.astro";
import Card from "../components/Card.astro";
import { db, Resource, like } from "astro:db";

const sfResources = await db
  .select()
  .from(Resource)
  .where(like(Resource.category, "Street Fighter"));

let title = "Street Fighter";
let subheader = "Yun has trouble getting in";
let imgSrc = "bg-capcom";
---

<PageLayout title={title} subheader={subheader} imgSrc={imgSrc}>
  <section
    class="w-11/12 mx-auto flex flex-col items-center lg:justify-center gap-4 lg:flex-row lg:w-9/12 md:flex-wrap"
  >
    {
      sfResources.map((res) => (
        <Card
          id={res.id}
          title={res.title}
          category={res.category}
          imgSrc={res.imgSrc}
          link={res.link}
          description={res.description}
        />
      ))
    }
  </section>
</PageLayout>
