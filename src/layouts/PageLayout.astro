---
interface Props {
  title: string;
  subheader: string;
  imgSrc: string;
}

const { title, subheader, imgSrc } = Astro.props;
import Navbar from "../components/Navbar.astro";
import TabNav from "../components/TabNav.astro";
import PageHeader from "../components/PageHeader.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative bg-zinc-950 h-full font-sans antialiased">
    <header>
      <Navbar />
      <PageHeader title={title} subheader={subheader} imgSrc={imgSrc} />
    </header>
    <main class="relative flex flex-col min-h-screen">
      <TabNav />
      <slot />
    </main>
  </body>
</html>
