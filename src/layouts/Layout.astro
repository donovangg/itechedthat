---
interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import TabNav from "../components/TabNav.astro";
import { ViewTransitions } from "astro:transitions";
import DropdownContainer from "../components/DropdownContainer.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{pageTitle}</title>
  </head>
  <body class="relative bg-zinc-950 h-full font-sans antialiased selection:bg-pink-700">
    <header>
      <Navbar />
      <Hero />
    </header>
    <main class="relative flex flex-col min-h-screen">
      <TabNav />
      <slot />
    </main>
    <Footer />
    <DropdownContainer />
  </body>
</html>
