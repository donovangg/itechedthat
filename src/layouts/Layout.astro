---
interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import TabNav from "../components/TabNav.astro";
import { ViewTransitions } from "astro:transitions";
import DropdownContainer from "../components/DropdownContainer.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Curated Fighting Game Resources" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:image"
      content="https://qczsiistziidnaavyrgw.supabase.co/storage/v1/object/sign/Resources/ken-throw.png?token=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1cmwiOiJSZXNvdXJjZXMva2VuLXRocm93LnBuZyIsImlhdCI6MTcxMzY3NzA5MCwiZXhwIjoxNzc2NzQ5MDkwfQ.jTWsZ_fj9eQH1a9GLy2pmKJcwYEoDPipRK0wmieiyNw&t=2024-04-21T05%3A24%3A50.614Z"
    />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Fighting Game Resources" />
    <meta
      name="twitter:description"
      content="Fighting game resources in one spot so you don't have to have an illuminati Discord invite"
    />
    <meta
      name="twitter:image"
      content="https://qczsiistziidnaavyrgw.supabase.co/storage/v1/object/sign/Resources/ken-throw.png?token=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1cmwiOiJSZXNvdXJjZXMva2VuLXRocm93LnBuZyIsImlhdCI6MTcxMzY3NzA5MCwiZXhwIjoxNzc2NzQ5MDkwfQ.jTWsZ_fj9eQH1a9GLy2pmKJcwYEoDPipRK0wmieiyNw&t=2024-04-21T05%3A24%3A50.614Z"
    />
    <ViewTransitions />
    <title>{pageTitle}</title>
  </head>
  <body
    class="relative bg-zinc-950 h-full font-sans antialiased selection:bg-pink-700"
  >
    <header>
      <Navbar />
      <Hero />
    </header>
    <main class="relative flex flex-col min-h-screen">
      <TabNav />
      <slot />
    </main>
    <Footer />
    <DropdownContainer />
  </body>
</html>
